<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:context=".weather.MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        app:cardElevation="20dp"
        android:layout_height="wrap_content">



       <androidx.core.widget.NestedScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">


           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:padding="8dp"
               android:layout_height="wrap_content">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:weightSum="10"
                   android:layout_margin="5dp"
                   android:layout_height="wrap_content">


                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:src="@drawable/ic_high_temperature"
                       android:layout_height="100dp"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_weight="6"
                       android:layout_gravity="center_vertical"
                       android:id="@+id/tv_tempMax"
                       android:textSize="20sp"
                       android:textStyle="bold"
                       android:layout_height="wrap_content"/>



               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:weightSum="10"
                   android:layout_margin="5dp"
                   android:layout_height="wrap_content">


                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:src="@drawable/ic_medium_temperature"
                       android:layout_height="100dp"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_weight="6"
                       android:layout_gravity="center_vertical"
                       android:id="@+id/tv_tempMid"
                       android:textSize="20sp"
                       android:textStyle="bold"
                       android:layout_height="wrap_content"/>



               </LinearLayout>




               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:weightSum="10"
                   android:layout_margin="5dp"
                   android:layout_height="wrap_content">


                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:src="@drawable/ic_low_temperature"
                       android:layout_height="100dp"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_weight="6"
                       android:textSize="20sp"
                       android:textStyle="bold"
                       android:layout_gravity="center_vertical"
                       android:id="@+id/tv_tempMin"
                       android:layout_height="wrap_content"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:weightSum="10"
                   android:layout_margin="5dp"
                   android:layout_height="wrap_content">


                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:src="@drawable/ic_humiity"
                       android:layout_height="100dp"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_weight="6"
                       android:layout_gravity="center_vertical"
                       android:id="@+id/tv_humidity"
                       android:textSize="20sp"
                       android:textStyle="bold"
                       android:layout_height="wrap_content"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:weightSum="10"
                   android:layout_margin="5dp"
                   android:layout_height="wrap_content">


                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight="4"
                       android:src="@drawable/ic_pressure_gauge_meter"
                       android:layout_height="100dp"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_weight="6"
                       android:textSize="20sp"
                       android:textStyle="bold"
                       android:layout_gravity="center_vertical"
                       android:id="@+id/tv_presure"
                       android:layout_height="wrap_content"/>

               </LinearLayout>


           </LinearLayout>


       </androidx.core.widget.NestedScrollView>



    </androidx.cardview.widget.CardView>



</RelativeLayout>
